<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/settings_main_category_label"
        app:key="@string/settings_main_category_id">
    <Preference
        app:title="@string/settings_category_radio"
        app:key="@string/settings_category_radio_id"
        app:icon="@drawable/round_leak_add_24"
        app:fragment="com.example.transmission.SettingsActivity$RadioSettingsFragment" />

    <Preference
        app:title="@string/settings_category_messages"
        app:key="@string/settings_category_messages_id"
        app:icon="@drawable/round_message_24"
        app:fragment="com.example.transmission.SettingsActivity$MessageSettingsFragment" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/settings_credits_category_label"
        app:key="@string/settings_credits_category_id">

        <Preference
            app:title="@string/settings_version_label"
            app:key="@string/settings_version_id"
            android:summary="@string/settings_version_summary"/>

        <Preference
            app:title="@string/settings_repository_label"
            app:key="@string/settings_repository_id"
            android:summary="@string/settings_repository_summary"/>

    </PreferenceCategory>
</PreferenceScreen>